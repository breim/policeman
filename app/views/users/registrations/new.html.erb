<div class="container">
  <div class="columns is-mobile is-centered">
    <div class="column is-three-quarters">
      <%= image_tag '/logo.png', class: 'logo-devise' %>
      <div class="card">
        <header class="card-header">
          <p class="card-header-title">
            Criar conta
          </p>
        </header>
        <div class="card-content">
          <div class="content">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>


            <div class="columns">
              <div class="column">
              <%= f.label :first_name, "Nome" %>
              <%= f.text_field :first_name, class: 'input', autofocus: true, autocomplete: "first_name" %>
              </div>

              <div class="column">
               <%= f.label :last_name, "Sobrenome" %>
              <%= f.text_field :last_name, class: 'input', autocomplete: "last_name" %>
              </div>
            </div>

            <div class="field">
              <%= f.label :email %>
              <%= f.email_field :email, class: 'input', autocomplete: "email" %>
            </div>

            <div class="field">
              <%= f.label :password, 'Senha' %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, class: 'input', autocomplete: "new-password" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, 'Repita a senha' %>
              <%= f.password_field :password_confirmation, class: 'input', autocomplete: "new-password" %>
            </div>

            <div class="actions">
              <%= f.submit "Criar conta", class: 'button is-link' %>
            </div>
            <% end %>

            <%= render 'users/shared/links' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
