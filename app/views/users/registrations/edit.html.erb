
<div class="container">
  <div class="columns is-mobile">
    <div class="column is-half is-offset-one-quarter">
      <%= image_tag '/logo.png', class: 'logo-devise' %>
      <div class="card">
        <header class="card-header">
          <p class="card-header-title">
            Alterar senha
          </p>
        </header>
        <div class="card-content">
          <div class="content">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, class: 'input', disabled: true, autocomplete: "email" %>
            </div>
            
            <div class="form-group">
              <%= f.label :senha %> <i>(deixe em branco se você não quiser mudá-lo)</i>
              <%= f.password_field :password, autofocus: true, class: 'input', autocomplete: "new-password" %>
              <% if @minimum_password_length %>
                <small class="form-text text-muted"><%= @minimum_password_length %> mínimo de caracteres</small>
              <% end %>
            </div>
            
            <div class="form-group">
              <%= f.label :password_confirmation, 'Confirmação da senha' %>
              <%= f.password_field :password_confirmation, class: 'input', autocomplete: "new-password" %>
            </div>

            <br/>
            <p>
              <%= f.submit "Salvar", class: 'button is-link' %>
            </p>
            <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>
        <footer class="card-footer">
        </footer>
      </div>
    </div>
  </div>
</div>

