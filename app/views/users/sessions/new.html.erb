<div class="container">
  <div class="columns is-mobile">
    <div class="column is-half is-offset-one-quarter">
      <%= image_tag '/logo.png', class: 'logo-devise' %>
      <div class="card">
        <header class="card-header">
          <p class="card-header-title">
            Entrar
          </p>
        </header>
        <div class="card-content">
          <div class="content">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, class: 'input', autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field">
              <%= f.label :password %><br />
              <%= f.password_field :password, class: 'input', autocomplete: "current-password" %>
            </div>

            <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :lembrar %>
            </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Entrar", class: 'button is-link' %>
            </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
        <footer class="card-footer">
        </footer>
      </div>
    </div>
  </div>
</div>
