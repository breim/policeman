<div class="container">
  <div class="columns is-mobile">
    <div class="column is-half is-offset-one-quarter">
      <%= image_tag '/logo.png', class: 'logo-devise' %>
      <div class="card">
        <header class="card-header">
          <p class="card-header-title">
            Alterar senha
          </p>
        </header>
        <div class="card-content">
          <div class="content">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="form-group">
              <%= f.label :password, "Nova senha" %>
              <%= f.password_field :password, class: 'form-control', autofocus: true, autocomplete: "new-password" %>
              <% if @minimum_password_length %>
              <small class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, "Repita a nova senha" %>
              <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
            </div>

            <p>
              <%= f.submit "Trocar minha senha", class: 'btn btn-primary' %>
            </p>
            <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>
        <footer class="card-footer">
        </footer>
      </div>
    </div>
  </div>
</div>
